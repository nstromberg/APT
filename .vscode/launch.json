    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true,
        },
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": [
                "--name", "debug",
                "--artifact_path", "artifacts/test_run/",
                "--data_path", "datasets/classification/OpenML-CC18",
                "--device", "cuda:0",
                "--lr", "0.0002",
                "--batch_size", "24",
                "--num_datasets", "4",
                "--num_trained_datasets", "2",
                "--aggregate_k_gradients", "2",
                "--steps_per_epoch", "12",
                "--max_epochs", "4",
                "--data_lr", "0.1",
                "--eval_data", "electricity.pt,nomao.pt",
                "--classification",
                "--initial_eval",
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true,
        }
    ]
}